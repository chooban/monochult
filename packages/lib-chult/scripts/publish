#! /bin/bash

CURRENT="$(npm --silent run currentversion)"
DEPLOYED="$(npm show . version)"

echo "Current is ${CURRENT}, deployed version is ${DEPLOYED}"

if [ "${CURRENT}" == "${DEPLOYED}" ]; then
  echo "Versions match. Bumping patch..."
  npx release-it -n
else
  echo "Version manually bumped to ${CURRENT}"
  npx release-it -n ${CURRENT}
fi
